@using Luxifer.Enums;
@model Grupo

@{
    ViewData["Title"] = "Criar Grupo";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        #map {
            height: 350px;
