<body>
    <div class="container">
       
        <main>
            <a asp-area="" asp-controller="User" asp-action="Index">
                <span class="material-icons-sharp">
                    <span class="material-symbols-sharp">
                        arrow_back
                    </span>
                </span>
            </a>
            <hr />          

            <div class="formulario">
                <h1 class="form-title">Criar Grupo</h1>
                <form asp-controller="Grupos" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="main-user-info">

                        <div class="txt_field">
                            <input asp-for="Nome" type="text" required>
                            <span></span>
                            <label>Nome</label>
                            <span class="text-danger"></span>
                        </div>

                        
                        <div class="txt_field">
                            <span></span>
                            <select asp-for="Cor" class="form-control">
                                <option value="">Selecione a cor do grupo</option>
                                <option value="@CoresGruposEnum.Azul">Azul</option>
                                <option value="@CoresGruposEnum.Vermelho">Vermelho</option>
                                <option value="@CoresGruposEnum.Laranja">Laranja</option>
                                <option value="@CoresGruposEnum.Verde">Verde</option>
                                <option value="@CoresGruposEnum.Amarelo">Amarelo</option>
                            </select>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-submit-btn">
                            <input type="submit" value="Criar" class="btn btn-primary" />
                        </div>


                    </div>
                    
                    
                </form>

            </div>

        </main>

        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-icons-sharp">menu</span>
                </button>
                <div class="theme-toggler">
                    <span class="material-icons-sharp active">light_mode</span>
                    <span class="material-icons-sharp">dark_mode</span>
                </div>
                <div class="profile">
