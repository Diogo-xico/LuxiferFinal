@model Luminaria
@{
    ViewData["Title"] = "Editar Luminária";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        #map {
            height: 350px;
        }
    </style>
</head>

<body>
    <div class="container">
       
        <main>

            <a asp-area="" asp-controller="User" asp-action="Index">
                <span class="header-titulo material-icons-sharp">
                    <span class="material-symbols-sharp">
                        arrow_back
                    </span>
                </span>
            </a>

            <hr />
            
            <div id="map"></div>

            <div class="formulario">
                <h1 class="form-title">Associar Luminária</h1>
                <form asp-controller="Luminaria" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="main-user-info">

                       
                        <div class="txt_field">
                            <input asp-for="Modelo" type="text" required>
                            <span></span>
                            <label>Modelo</label>
                            <span class="text-danger"></span>
                        </div>
                        <div class="txt_field">
                            <input asp-for="Cidade" type="text" required>
                            <span></span>
                            <label>Cidade</label>
                            <span class="text-danger"></span>
                        </div>
                        <div class="txt_field">
                            <input asp-for="Pais" type="text" required>
                            <span></span>
                            <label>País</label>
                            <span class="text-danger"></span>
                        </div>
                        <div class="txt_field">
                            <input asp-for="Latitude" type="text" id="input1" required>
                            <span></span>
                            <label>Latitude</label>
                            <span class="text-danger"></span>
                        </div>
                        <div class="txt_field">
                            <input asp-for="Longitude" type="text" id="input2" required>
                            <span></span>
                            <label>Longitude</label>
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-submit-btn">
                            <input type="submit" value="Edit" class="btn btn-primary" />
                        </div>

                    </div>

                </form>
            </div>

        </main>

        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-icons-sharp">menu</span>
                </button>
                <div class="theme-toggler">
                    <span class="material-icons-sharp active">light_mode</span>
                    <span class="material-icons-sharp">dark_mode</span>
                </div>              
            </div>

            <div class="estatisticas">
                <div class="header">
                    <h1>Estatisticas</h1>
                    <a href="#">More<span class="material-icons-sharp">chevron_right</span></a>
                </div>
                <div class="estatistica">
                    <span class="material-icons-sharp"> lightbulb </span>
                    <h4>Data de instalação</h4>
                    <div class="date-time">
                        <p>7 Nov, 2021</p>
                        <small class="text-muted">9:14pm</small>
                    </div>
                    <div class="date-time">
                        <p>7 Nov, 2021</p>
                        <small class="text-muted">9:14pm</small>
                    </div>
                    <div class="date-time">
                        <p>7 Nov, 2021</p>
                        <small class="text-muted">9:14pm</small>
                    </div>
                </div>
                <div class="estatistica">
                    <span class="material-icons-sharp"> lightbulb </span>
                    <h4>Última revisão</h4>
                    <div class="date-time">
                        <p>7 Nov, 2021</p>
                        <small class="text-muted">9:14pm</small>
                    </div>
                    <div class="date-time">
                        <p>7 Nov, 2021</p>
                        <small class="text-muted">9:14pm</small>
                    </div>
                    <div class="date-time">
                        <p>7 Nov, 2021</p>
                        <small class="text-muted">9:14pm</small>
                    </div>
                </div>
            </div>

            <div class="estatisticas">
                <div class="header">
                    <h1>Estatisticas</h1>
                    <a href="#">More<span class="material-icons-sharp">chevron_right</span></a>
                </div>
                <div class="estatistica">
                    <span class="material-icons-sharp"> lightbulb </span>
                    <h4>Data de instalação</h4>
                    <div class="date-time">
